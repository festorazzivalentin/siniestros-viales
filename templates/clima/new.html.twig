{% extends 'base.html.twig' %}

{% block title %}Clima nuevo{% endblock %}

{% block body %}
<style>
/* Header gradient + icon alignment */
.clima-header { display:flex; align-items:center; gap:.75rem; padding:1rem 1.25rem; border-radius:.5rem; color:#fff; margin-bottom:1.25rem; background: linear-gradient(135deg,#667eea 0%, #764ba2 100%); }
.clima-header h1 { margin:0; font-size:1.35rem; font-weight:600; }
.clima-header .bi { font-size:1.6rem; display:inline-flex; align-items:center; }

/* Card */
.clima-card { max-width:760px; margin:0 auto; border-radius:.75rem; overflow:hidden; box-shadow: 0 8px 30px rgba(36, 37, 38, 0.08); }
.clima-card .card-header { background: linear-gradient(90deg,#79c7ff 0%,#60a5fa 100%); color:#05204a; padding:0.9rem 1.25rem; display:flex; align-items:center; gap:.6rem; }
.clima-card .card-header strong { color:#03203a; }
.clima-card .card-body { padding:1.25rem; background:#fff; }

.form-actions { display:flex; gap:.5rem; justify-content:flex-end; margin-top:1rem; }

/* Form spacing: labels, groups and inputs */
.clima-card .form-group,
.clima-card .form-row { margin-bottom: 1rem; }
.clima-card label { display:block; margin-bottom: .5rem; font-weight:600; color: #05204a; }
.clima-card .form-control { padding: .55rem .75rem; border-radius: .5rem; border: 1px solid #e2e8f0; box-shadow: none; }
.clima-card .form-control:focus { box-shadow: 0 0 0 0.15rem rgba(96,165,250,0.18); border-color: #60a5fa; outline: none; }
.clima-card .form-text { font-size: .875rem; color: #6b7280; margin-top: .25rem; }

/* Small responsive tweaks */
@media (max-width:576px) {
    .clima-card { margin:0 1rem; }
    .clima-header h1 { font-size:1.15rem; }
    .form-actions { flex-direction:column-reverse; gap:.5rem; }
}
</style>

<div class="container mt-4">
    <div class="clima-header">
        <i class="bi bi-cloud-sun-fill" aria-hidden="true"></i>
        <h1>Registrar nuevo clima</h1>
    </div>

    <div class="clima-card card">
        <div class="card-header">
            <i class="bi bi-cloud-arrow-down-fill" aria-hidden="true"></i>
            <strong>Nuevo registro</strong>
        </div>
        <div class="card-body">
            {{ form_start(form) }}
                <div class="row">
                    <div class="col-12">
                        {{ form_widget(form) }}
                    </div>
                </div>
                <div class="form-actions">
                    <a href="{{ path('clima_index') }}" class="btn btn-outline-secondary">Cancelar</a>
                    <button class="btn btn-primary">{{ button_label|default('Guardar') }}</button>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}