{% extends 'base.html.twig' %}

{% block title %}Editar Rol {{ rol.descripcion }}{% endblock %}

{% block body %}
<style>
.rol-header { display:flex; justify-content:center; align-items:center; gap:.75rem; padding:1rem 1.25rem; border-radius:.5rem; color:#fff; margin-bottom:1.25rem; background: linear-gradient(135deg,#f59e0b 0%, #f97316 100%); }
.rol-header h1 { margin:0; font-size:1.35rem; font-weight:600; text-align:center; width:auto; }
.rol-header .bi { font-size:1.6rem; display:inline-flex; align-items:center; color:#fff; }

.rol-card { max-width:760px; margin:0 auto; border-radius:.75rem; overflow:hidden; box-shadow: 0 8px 30px rgba(36, 37, 38, 0.08); }
.rol-card .card-header { background: linear-gradient(90deg,#fff7ed 0%,#ffedd5 100%); color:#4b2e00; padding:0.9rem 1.25rem; display:flex; align-items:center; gap:.6rem; }
.rol-card .card-header strong { color:#4b2e00; }
.rol-card .card-body { padding:1.25rem; background:#fff; }

.rol-card .form-group,
.rol-card .form-row { margin-bottom: 1rem; }
.rol-card label { display:block; margin-bottom: .5rem; font-weight:600; color:#1e293b; }
.rol-card .form-control { padding: .55rem .75rem; border-radius: .5rem; border: 1px solid #e9eefc; box-shadow: none; }
.rol-card .form-control:focus { box-shadow: 0 0 0 0.15rem rgba(249,115,22,0.12); border-color: #f97316; outline: none; }
.rol-card .form-text { font-size: .875rem; color: #6b7280; margin-top: .25rem; }

.form-actions { display:flex; gap:.5rem; justify-content:flex-end; margin-top:1rem; }

@media (max-width:576px) {
  .rol-card { margin:0 1rem; }
  .rol-header h1 { font-size:1.15rem; }
  .form-actions { flex-direction:column-reverse; gap:.5rem; }
}
</style>

<div class="container mt-4">
  <div class="rol-header">
    <i class="bi bi-car-front-fill" aria-hidden="true"></i>
    <h1>Editar Rol "{{ rol.descripcion }}"</h1>
  </div>

  <div class="rol-card card">
    <div class="card-header">
      <i class="bi bi-pencil-square" aria-hidden="true"></i>
      <strong>Editar rol</strong>
    </div>
    <div class="card-body">
      {{ form_start(form) }}
        <div class="form-group">
          {{ form_label(form.descripcion, 'Descripci√≥n', {'label_attr': {'class': 'form-label'}}) }}
          {{ form_widget(form.descripcion, {
              'attr': {
                'class': 'form-control',
                'value': rol.descripcion
              }
            }) }}
          {{ form_errors(form.descripcion) }}
        </div>

        <div class="form-actions">
          <a href="{{ path('rol_index') }}" class="btn btn-outline-secondary">Cancelar</a>
          <button type="submit" class="btn btn-primary">Guardar cambios</button>
        </div>
      {{ form_end(form) }}
    </div>
  </div>
</div>
{% endblock %}
