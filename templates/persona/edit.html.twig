{% extends 'base.html.twig' %}

{% block title %}Editar Persona{% endblock %}

{% block body %}
<style>
.ps-header { display:flex; align-items:center; gap:.75rem; padding:1rem 1.25rem; border-radius:.5rem; color:#fff; margin-bottom:1.25rem; background: linear-gradient(135deg,#3949ab 0%, #1e88e5 100%); }
.ps-header h1 { margin:0; font-size:1.35rem; font-weight:600; }
.ps-card { max-width:720px; margin:0 auto; background:#fff; padding:1.25rem; border-radius:.5rem; box-shadow: 0 8px 30px rgba(36,37,38,0.06); }
.form-group { margin-bottom:1rem; }
.form-label { margin-bottom:.35rem; display:block; font-weight:600; }
.form-control:focus { box-shadow: 0 0 0 .2rem rgba(57,73,171,.15); border-color:#3949ab; }
.form-actions { display:flex; gap:.5rem; align-items:center; margin-top:1.5rem; }
</style>

<div class="container mt-4">
    <div class="ps-header">
        <i class="bi bi-person-vcard me-2" aria-hidden="true"></i>
        <h1 class="mb-0">Editar Persona</h1>
    </div>

    <div class="ps-card">
        {{ form_start(form) }}
            <div class="form-group">
                {{ form_label(form.nombre, null, {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.nombre, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.nombre) }}
            </div>

            <div class="form-group">
                {{ form_label(form.dni, null, {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.dni, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.dni) }}
            </div>

            <div class="form-group">
                {{ form_label(form.fecha_nacimiento, 'Fecha de Nacimiento', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.fecha_nacimiento, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.fecha_nacimiento) }}
            </div>

            <div class="form-group">
                {{ form_label(form.sexo, null, {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.sexo, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.sexo) }}
            </div>

            <div class="form-actions">
                <button class="btn btn-primary">{{ button_label|default('Guardar cambios') }}</button>
                <a href="{{ path('persona_index') }}" class="btn btn-secondary">Volver al listado</a>
            </div>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
