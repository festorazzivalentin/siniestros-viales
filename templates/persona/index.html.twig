{% extends 'base.html.twig' %}

{% block title %}Personas{% endblock %}

{% block body %}
<style>
.ps-header { display:flex; align-items:center; gap:.75rem; padding:1rem 1.25rem; border-radius:.5rem; color:#fff; margin-bottom:1.25rem; background: linear-gradient(135deg,#3949ab 0%, #1e88e5 100%); }
.ps-header h1 { margin:0; font-size:1.35rem; font-weight:600; }
.ps-header .bi { font-size:1.5rem; }

.ps-card { max-width:1000px; margin:0 auto; }
.ps-table { background:#fff; border-radius:.5rem; box-shadow: 0 8px 30px rgba(36,37,38,0.06); overflow:hidden; }
.ps-table table { margin:0; }

.add-btn { margin-top:1rem; }
.search-box { display:flex; gap:.5rem; padding:1rem; background:#f8f9fa; border-bottom:1px solid #dee2e6; }
.search-input { flex:1; max-width:300px; }
.search-term { font-weight:600; color:#3949ab; margin-bottom:1rem; }
.action-bar { display:flex; gap:.5rem; justify-content:space-between; align-items:center; margin-top:1rem; }

@media (max-width:480px){ 
    .ps-header h1{ font-size:1.1rem } 
    .ps-header .bi{ font-size:1.25rem }
    .search-box { flex-direction:column; }
    .search-input { max-width:100%; }
}
</style>

<div class="container mt-4">
    <div class="ps-header">
        <i class="bi bi-person-vcard me-2" aria-hidden="true"></i>
        <h1 class="mb-0">Personas</h1>
    </div>

    <div class="ps-card">
        <div class="ps-table">
            <div class="search-box">
                <div class="search-input">
                    <form action="{{ path('persona_buscar') }}" method="get" class="d-flex gap-2">
                        <input type="search" name="nombre" class="form-control" placeholder="Buscar por nombre..." value="{{ app.request.query.get('nombre') }}">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-search"></i>
                        </button>
                    </form>
                </div>
            </div>

            {% if app.request.query.get('nombre') %}
                <div class="p-3">
                    <div class="search-term">
                        Resultados para: "{{ app.request.query.get('nombre') }}"
                    </div>
                </div>
            {% endif %}

            <table class="table table-striped mb-0">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Nombre</th>
                        <th>DNI</th>
                        <th>Fecha de Nacimiento</th>
                        <th>Sexo</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                {% for persona in personas %}
                    <tr>
                        <td>{{ persona.id }}</td>
                        <td>{{ persona.nombre }}</td>
                        <td>{{ persona.dni }}</td>
                        <td>{{ persona.fechaNacimiento ? persona.fechaNacimiento|date('d/m/Y') : '' }}</td>
                        <td>{{ persona.sexo ? persona.sexo.descripcion : '' }}</td>
                        <td class="d-flex gap-2">
                            <a href="{{ path('persona_edit', {'id': persona.id}) }}" class="btn btn-warning btn-sm">Editar</a>
                            
                            <form method="post" action="{{ path('persona_delete', {'id': persona.id}) }}" onsubmit="return confirm('¿Seguro que desea eliminar esta persona?');" style="display:inline;margin:0;">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ persona.id) }}">
                                <button class="btn btn-danger btn-sm">Eliminar</button>
                            </form>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="6">
                            {% if app.request.query.get('nombre') %}
                                No se encontraron personas que coincidan con "{{ app.request.query.get('nombre') }}".
                            {% else %}
                                No se encontraron personas.
                            {% endif %}
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>

        <div class="action-bar">
            <a href="{{ path('persona_new') }}" class="btn btn-light">
                <i class="bi bi-plus-lg me-1"></i> Registrar Persona
            </a>
            {% if app.request.query.get('nombre') %}
                <a href="{{ path('persona_index') }}" class="btn btn-secondary">
                    <i class="bi bi-x-lg me-1"></i> Limpiar búsqueda
                </a>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}
