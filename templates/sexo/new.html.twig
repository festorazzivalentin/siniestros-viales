{% extends 'base.html.twig' %}

{% block title %}Registrar Sexo{% endblock %}

{% block body %}
<style>
.sx-header { display:flex; align-items:center; gap:.75rem; padding:1rem 1.25rem; border-radius:.5rem; color:#fff; margin-bottom:1.25rem; background: linear-gradient(135deg,#ff7ab6 0%, #7c3aed 100%); }
.sx-header h1 { margin:0; font-size:1.35rem; font-weight:600; }
.sx-card { max-width:720px; margin:0 auto; background:#fff; padding:1.25rem; border-radius:.5rem; box-shadow: 0 8px 30px rgba(36,37,38,0.06); }
.form-group { margin-bottom:1rem; }
.form-label { margin-bottom:.35rem; display:block; font-weight:600; }
.form-control:focus { box-shadow: 0 0 0 .2rem rgba(124,58,237,.15); border-color:#7c3aed; }
.form-actions { display:flex; gap:.5rem; align-items:center; margin-top:.75rem }
</style>

<div class="container mt-4">
    <div class="sx-header">
        <i class="bi bi-gender-ambiguous me-2" aria-hidden="true"></i>
        <h1 class="mb-0">Registrar Sexo</h1>
    </div>

    <div class="sx-card">
        {{ form_start(form) }}

            <div class="form-group">
                {{ form_label(form.descripcion, null, {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.descripcion, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.descripcion) }}
            </div>

            <div class="form-actions">
                <button class="btn btn-primary">Guardar</button>
                <a href="{{ path('sexo_index') }}" class="btn btn-secondary">Volver al listado</a>
            </div>

        {{ form_end(form) }}
    </div>
</div>
{% endblock %}