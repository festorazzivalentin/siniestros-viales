{% extends 'base.html.twig' %}

{% block title %}Sexos{% endblock %}

{% block body %}
<style>
/* Sexo - gender palette (magenta → purple) */
.sx-header { display:flex; align-items:center; gap:.75rem; padding:1rem 1.25rem; border-radius:.5rem; color:#fff; margin-bottom:1.25rem; background: linear-gradient(135deg,#ff7ab6 0%, #7c3aed 100%); }
.sx-header h1 { margin:0; font-size:1.35rem; font-weight:600; }
.sx-header .bi { font-size:1.5rem; }

.sx-card { max-width:900px; margin:0 auto; }
.sx-table { background:#fff; border-radius:.5rem; box-shadow: 0 8px 30px rgba(36,37,38,0.06); overflow:hidden; }
.sx-table table { margin:0; }

.add-btn { margin-top:1rem; }

@media (max-width:480px){ .sx-header h1{ font-size:1.1rem } .sx-header .bi{ font-size:1.25rem } }
</style>

<div class="container mt-4">
    <div class="sx-header">
        <i class="bi bi-gender-ambiguous me-2" aria-hidden="true"></i>
        <h1 class="mb-0">Sexos</h1>
    </div>

    <div class="sx-card">
        <div class="sx-table">
            <table class="table table-striped mb-0">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Descripción</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {% for sexo in sexos %}
                        <tr>
                            <td>{{ sexo.id }}</td>
                            <td>{{ sexo.descripcion }}</td>
                            <td class="d-flex gap-2">
                                <a href="{{ path('sexo_edit', {'id': sexo.id}) }}" class="btn btn-warning btn-sm">Editar</a>

                                <form method="post" action="{{ path('sexo_delete', {'id': sexo.id}) }}" onsubmit="return confirm('¿Seguro que desea eliminar este sexo?');" style="display:inline;margin:0;">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ sexo.id) }}">
                                    <button class="btn btn-danger btn-sm">Eliminar</button>
                                </form>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="3">No hay sexos registrados.</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>

        <a href="{{ path('sexo_new') }}" class="btn btn-light add-btn">
            <i class="bi bi-plus-lg me-1"></i> Registrar Sexo
        </a>
    </div>
</div>
{% endblock %}
