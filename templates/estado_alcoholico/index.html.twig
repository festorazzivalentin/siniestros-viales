{% extends 'base.html.twig' %}

{% block title %}Estados Alcohólicos{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="d-flex align-items-center mb-3">
        <i class="bi bi-cup-fill me-2" style="font-size: 1.5rem;"></i>
        <h1 class="mb-0">Estados Alcohólicos</h1>
    </div>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Descripción</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            {% for estado in estados %}
                <tr>
                    <td>{{ estado.id }}</td>
                    <td>{{ estado.descripcion }}</td>
                    <td>
                        <a href="{{ path('estado_alcoholico_editar', {'id': estado.id}) }}" class="btn btn-warning btn-sm">Editar</a>
                        <a href="{{ path('estado_alcoholico_eliminar', {'id': estado.id}) }}" class="btn btn-danger btn-sm">Eliminar</a>
                    </td>
                </tr>

            {% else %}
                <tr>
                    <td colspan="2">No hay estados alcohólicos registrados.</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('estado_alcoholico_nuevo') }}" class="btn btn-primary mt-3">
        <i class="bi bi-plus-lg me-1"></i> Registrar Estado Alcohólico
    </a>
{% endblock %}
