{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        /* Estado Alcoholico - new form styles (adapted from edit) */
    .estado-header { display:flex; justify-content:center; align-items:center; gap:.75rem; padding:1rem 1.25rem; border-radius:.5rem; color:#fff; margin-bottom:1.25rem; background: linear-gradient(135deg,#06b6d4 0%, #0ea5a4 100%); }
    .estado-header h1 { margin:0; font-size:1.35rem; font-weight:600; text-align:center; width:auto; }
    .estado-header .bi { font-size:1.6rem; display:inline-flex; align-items:center; color: #ffffff; }

        .estado-card { max-width:760px; margin:0 auto; border-radius:.75rem; overflow:hidden; box-shadow: 0 8px 30px rgba(36, 37, 38, 0.08); }
    .estado-card .card-header { background: linear-gradient(90deg,#bff7ff 0%,#7ce5d8 100%); color:#063235; padding:0.9rem 1.25rem; display:flex; align-items:center; gap:.6rem; }
    .estado-card .card-header strong { color:#063235; }
        .estado-card .card-body { padding:1.25rem; background:#fff; }

        /* Form spacing: labels, groups and inputs */
        .estado-card .form-group,
        .estado-card .form-row { margin-bottom: 1rem; }
        .estado-card label { display:block; margin-bottom: .5rem; font-weight:600; color: #331b00; }
        .estado-card .form-control { padding: .55rem .75rem; border-radius: .5rem; border: 1px solid #e9e2db; box-shadow: none; }
    .estado-card .form-control:focus { box-shadow: 0 0 0 0.15rem rgba(6,182,212,0.12); border-color: #06b6d4; outline: none; }
        .estado-card .form-text { font-size: .875rem; color: #6b7280; margin-top: .25rem; }

        .form-actions { display:flex; gap:.5rem; justify-content:flex-end; margin-top:1rem; }

        @media (max-width:576px) {
            .estado-card { margin:0 1rem; }
            .estado-header h1 { font-size:1.15rem; }
            .form-actions { flex-direction:column-reverse; gap:.5rem; }
        }
    </style>
{% endblock %}

{% block title %}Nuevo estado alcoholico{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="estado-header">
            <i class="bi bi-patch-plus-fill" aria-hidden="true"></i>
            <h1>Registrar nuevo Estado Alcohólico</h1>
        </div>

        <div class="estado-card card">
            <div class="card-header">
                <i class="bi bi-plus-circle-fill" aria-hidden="true"></i>
                <strong>Nuevo estado</strong>
            </div>
            <div class="card-body">
                {{ form_start(form) }}
                    <div class="form-group">
                        {{ form_label(form.descripcion, 'Descripción', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.descripcion, { 'attr': {'class': 'form-control'} }) }}
                        {{ form_errors(form.descripcion) }}
                    </div>

                    <div class="form-actions">
                        <a href="{{ path('estado_alcoholico_index') }}" class="btn btn-outline-secondary">Cancelar</a>
                        <button class="btn btn-primary">{{ button_label|default('Guardar') }}</button>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}