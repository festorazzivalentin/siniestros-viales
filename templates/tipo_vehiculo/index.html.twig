{% extends 'base.html.twig' %}

{% block title %}Tipos de vehículo{% endblock %}

{% block body %}
<style>
/* Tipo Vehículo - vehicle palette (blue steel) */
.tv-header { display:flex; align-items:center; gap:.75rem; padding:1rem 1.25rem; border-radius:.5rem; color:#fff; margin-bottom:1.25rem; background: linear-gradient(135deg,#0ea5ff 0%, #0284c7 100%); }
.tv-header h1 { margin:0; font-size:1.35rem; font-weight:600; }
.tv-header .bi { font-size:1.5rem; }

.tv-card { max-width:900px; margin:0 auto; }
.tv-table { background:#fff; border-radius:.5rem; box-shadow: 0 8px 30px rgba(36,37,38,0.06); overflow:hidden; }
.tv-table table { margin:0; }

.add-btn { margin-top:1rem; }
</style>

<div class="container mt-4">
    <div class="tv-header">
        <i class="bi bi-truck-front-fill me-2"></i>
        <h1 class="mb-0">Tipos de Vehículo</h1>
    </div>

    <div class="tv-card">
        <div class="tv-table">
            <table class="table table-striped mb-0">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Descripción</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {% for tipo in tipos %}
                        <tr>
                            <td>{{ tipo.id }}</td>
                            <td>{{ tipo.descripcion }}</td>
                            <td>
                                <a href="{{ path('tipo_vehiculo_edit', {'id': tipo.id}) }}" class="btn btn-warning btn-sm">Editar</a>
                                <a href="{{ path('tipo_vehiculo_delete', {'id': tipo.id}) }}" class="btn btn-danger btn-sm">Eliminar</a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="3">No hay tipos de vehículo registrados.</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>

        <a href="{{ path('tipo_vehiculo_new') }}" class="btn btn-primary add-btn">
            <i class="bi bi-plus-lg me-1"></i> Registrar Tipo de Vehículo
        </a>
    </div>
</div>
{% endblock %}
