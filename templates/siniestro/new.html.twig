{% extends 'base.html.twig' %}

{% block title %}Nuevo siniestro{% endblock %}

{% block body %}
<style>
/* Siniestro form (new/edit) - crimson -> amber */
.sn-form-header { display:flex; align-items:center; gap:.75rem; padding:1rem 1.25rem; border-radius:.5rem; color:#fff; margin-bottom:1.25rem; background: linear-gradient(135deg,#ef4444 0%, #f97316 100%); }
.sn-card { max-width:720px; margin:0 auto; background:#fff; padding:1.25rem; border-radius:.5rem; box-shadow: 0 8px 30px rgba(36,37,38,0.06); }
.form-group { margin-bottom:1rem; }
.form-label { margin-bottom:.35rem; display:block; font-weight:600; }
.form-control:focus { box-shadow: 0 0 0 .2rem rgba(249,115,22,.12); border-color:#f97316; }
.form-actions { display:flex; gap:.5rem; align-items:center; margin-top:1rem; }
@media (max-width:480px){ .sn-form-header h1{ font-size:1.1rem } }
</style>

<div class="container mt-4">
    <div class="sn-form-header">
        <i class="bi bi-exclamation-triangle-fill me-2" aria-hidden="true"></i>
        <h1 class="mb-0">Registrar nuevo siniestro</h1>
    </div>

    <div class="sn-card">
        {{ form_start(form) }}

            <div class="form-group">
                {{ form_label(form.fecha, null, {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.fecha, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.fecha) }}
            </div>

            <div class="form-group">
                {{ form_label(form.hora, null, {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.hora, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.hora) }}
            </div>

            <div class="form-group">
                {{ form_label(form.ubicacion, null, {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.ubicacion, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.ubicacion) }}
            </div>

            <div class="form-group">
                {{ form_label(form.descripcion, null, {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.descripcion, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.descripcion) }}
            </div>

            <div class="form-group">
                {{ form_label(form.clima, null, {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.clima, {'attr': {'class': 'form-select'}}) }}
                {{ form_errors(form.clima) }}
            </div>


            <hr class="my-4">

            <h5 class="mb-3">Detalle del siniestro</h5>

            
            {% for detalleForm in form.siniestroDetalles %}
                
                <div class="form-group">
                    {{ form_label(detalleForm.tipo_vehiculo, null, {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(detalleForm.tipo_vehiculo, {'attr': {'class': 'form-select'}}) }}
                    {{ form_errors(detalleForm.tipo_vehiculo) }}
                </div>

                <div class="form-group">
                    {{ form_label(detalleForm.vehiculo_modelo, null, {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(detalleForm.vehiculo_modelo, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(detalleForm.vehiculo_modelo) }}
                </div>

                <div class="form-group">
                    {{ form_label(detalleForm.vehiculo_patente, null, {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(detalleForm.vehiculo_patente, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(detalleForm.vehiculo_patente) }}
                </div>

                <div class="form-group">
                    {{ form_label(detalleForm.persona, null, {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(detalleForm.persona, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(detalleForm.persona) }}
                </div>

                <div class="form-group">
                    {{ form_label(detalleForm.rol, null, {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(detalleForm.rol, {'attr': {'class': 'form-select'}}) }}
                    {{ form_errors(detalleForm.rol) }}
                </div>

                <div class="form-group">
                    {{ form_label(detalleForm.edad, null, {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(detalleForm.edad, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(detalleForm.edad) }}
                </div>

                <div class="form-group">
                    {{ form_label(detalleForm.porcentaje_alcohol, null, {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(detalleForm.porcentaje_alcohol, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(detalleForm.porcentaje_alcohol) }}
                </div>

                <div class="form-group">
                    {{ form_label(detalleForm.estado_alcoholico, null, {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(detalleForm.estado_alcoholico, {'attr': {'class': 'form-select'}}) }}
                    {{ form_errors(detalleForm.estado_alcoholico) }}
                </div>

                <div class="form-group">
                    {{ form_label(detalleForm.grupo_etario, null, {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(detalleForm.grupo_etario, {'attr': {'class': 'form-select'}}) }}
                    {{ form_errors(detalleForm.grupo_etario) }}
                </div>

                <div class="form-group">
                    {{ form_label(detalleForm.estado_civil, null, {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(detalleForm.estado_civil, {'attr': {'class': 'form-select'}}) }}
                    {{ form_errors(detalleForm.estado_civil) }}
                </div>

                
                <div class="form-group">
                    {{ form_label(detalleForm.observaciones, null, {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(detalleForm.observaciones, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(detalleForm.observaciones) }}
                </div>

            {% endfor %}


            <div class="form-actions">
                <button class="btn btn-primary">{{ button_label|default('Guardar') }}</button>
                <a href="{{ path('siniestro_index') }}" class="btn btn-secondary">Volver al listado</a>
            </div>

        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
