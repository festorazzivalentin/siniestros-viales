{% extends 'base.html.twig' %}

{% block title %}Editar siniestro {{ siniestro.id }}{% endblock %}

{% block body %}
<style>

.sn-form-header { display:flex; align-items:center; gap:.75rem; padding:1rem 1.25rem; border-radius:.5rem; color:#fff; margin-bottom:1.25rem; background: linear-gradient(135deg,#ef4444 0%, #f97316 100%); }
.sn-card { max-width:720px; margin:0 auto; background:#fff; padding:1.25rem; border-radius:.5rem; box-shadow: 0 8px 30px rgba(36,37,38,0.06); }
.form-group { margin-bottom:1rem; }
.form-label { margin-bottom:.35rem; display:block; font-weight:600; }
.form-control:focus { box-shadow: 0 0 0 .2rem rgba(249,115,22,.12); border-color:#f97316; }
.form-actions { display:flex; gap:.5rem; align-items:center; margin-top:1rem; }
@media (max-width:480px){ .sn-form-header h1{ font-size:1.1rem } }
</style>

<div class="container mt-4">
    <div class="sn-form-header">
        <i class="bi bi-pencil-square me-2" aria-hidden="true"></i>
        <h1 class="mb-0">Editar siniestro #{{ siniestro.id }}</h1>
    </div>

    <div class="sn-card">
        {{ form_start(form) }}

            <div class="form-group">
                {{ form_label(form.fecha, null, {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.fecha, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.fecha) }}
            </div>

            <div class="form-group">
                {{ form_label(form.hora, null, {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.hora, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.hora) }}
            </div>

            <div class="form-group">
                {{ form_label(form.ubicacion, null, {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.ubicacion, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.ubicacion) }}
            </div>

            <div class="form-group">
                {{ form_label(form.descripcion, null, {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.descripcion, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.descripcion) }}
            </div>

            <div class="form-group">
                {{ form_label(form.clima, null, {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.clima, {'attr': {'class': 'form-select'}}) }}
                {{ form_errors(form.clima) }}
            </div>

            <div class="form-actions">
                <button class="btn btn-primary">{{ button_label|default('Guardar cambios') }}</button>
                <a href="{{ path('siniestro_index') }}" class="btn btn-secondary">Volver al listado</a>
            </div>

        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
