{% extends 'base.html.twig' %}

{% block title %}Listado de Siniestros{% endblock %}

{% block body %}
<style>


.btn-sm {
  border-radius: .4rem;
  font-weight: 500;
  transition: all 0.2s ease-in-out;
}

.btn-warning {
  background-color: #fbbf24 !important;
  border: none;
  color: #fff !important;
}
.btn-warning:hover {
  background-color: #f59e0b !important;
}

.btn-danger {
  background-color: #ef4444 !important;
  border: none;
  color: #fff !important;
}
.btn-danger:hover {
  background-color: #dc2626 !important;
}

.btn-info {
  background-color: #3b82f6 !important;
  border: none;
  color: #fff !important;
}
.btn-info:hover {
  background-color: #2563eb !important;
}

.btn-light {
  background-color: #f3f4f6 !important;
  border: 1px solid #e5e7eb !important;
  color: #374151 !important;
}
.btn-light:hover {
  background-color: #e5e7eb !important;
}

.table-striped > tbody > tr:nth-of-type(odd) {
  background-color: #fafafa !important;
}
.table-striped > tbody > tr:nth-of-type(even) {
  background-color: #ffffff !important;
}

.sn-table {
  background: #fff;
  border-radius: .6rem;
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.06);
  overflow: hidden;
}

.table td, .table th {
  vertical-align: middle;
  padding: .75rem 1rem;
}

.table tbody tr:hover {
  background-color: #f1f5f9 !important;
}
</style>


<div class="container mt-4">
    <div class="sn-header">
        <i class="bi bi-exclamation-triangle-fill me-2" aria-hidden="true"></i>
        <h1 class="mb-0">Listado de Siniestros</h1>
    </div>

    <div class="sn-card">
        <div class="search-row">
            <form action="{{ path('siniestro_index') }}" method="get" class="d-flex align-items-center gap-2">
                <label for="fecha" class="visually-hidden">Fecha</label>
                <input type="date" id="fecha" name="fecha" class="form-control" value="{{ fecha }}">
                <button class="btn btn-light" type="submit"><i class="bi bi-search"></i> Buscar</button>
                {% if fecha %}
                    <a href="{{ path('siniestro_index') }}" class="btn btn-secondary ms-2">Limpiar</a>
                {% endif %}
            </form>
            <div class="ms-auto">
                <a href="{{ path('siniestro_new') }}" class="btn btn-light">
                    <i class="bi bi-plus-lg me-1"></i> Registrar nuevo siniestro
                </a>
            </div>
        </div>

        <div class="sn-table">
            <table class="table table-striped mb-0">
        <thead>
            <tr>
                <th>ID</th>
                <th>Fecha</th>
                <th>Hora</th>
                <th>Ubicación</th>
                <th>Descripción</th>
                <th>Acciones</th>
            </tr>
        </thead>
    <tbody>
    {% for siniestro in siniestros %}
            <tr>
                <td>{{ siniestro.id }}</td>
                <td>{{ siniestro.fecha ? siniestro.fecha|date('d/m/Y') : '-' }}</td>
                <td>{{ siniestro.hora ? siniestro.hora|date('H:i') : '-' }}</td>
                <td>{{ siniestro.ubicacion}}</td>
                <td>{{ siniestro.descripcion }}</td>
                        <td class="d-flex gap-2">
                            {% if is_granted('ROLE_ADMIN') %}
                                <a href="{{ path('siniestro_edit', {'id': siniestro.id}) }}" class="btn btn-warning btn-sm">Editar</a>

                                <form method="post" action="{{ path('siniestro_delete', {'id': siniestro.id}) }}" onsubmit="return confirm('¿Está seguro de que desea eliminar este siniestro?');" style="display:inline;margin:0;">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ siniestro.id) }}">
                                    <button class="btn btn-danger btn-sm">Eliminar</button>
                                </form>
                            {% endif %}

                            <a href="{{ path('siniestro_detalles', {'id': siniestro.id}) }}" class="btn btn-info btn-sm">Ver detalles</a>
                            <a href="{{ path('siniestro_detalle_new', {'id': siniestro.id}) }}" class="btn btn-light btn-sm">Agregar Detalle</a>
                        </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">No se encontraron siniestros</td>
            </tr>
        {% endfor %}
        </tbody>
            </table>

        </div>

        <div class="action-bar p-3">
            <a href="{{ path('siniestro_reportes_mes') }}" class="btn btn-info btn-sm">Reporte Siniestros por Mes</a>
            <a href="{{ path('siniestro_detalle_reportes_victima_autor') }}" class="btn btn-info btn-sm">Reporte Víctima-Autor</a>
            <a href="{{ path('siniestro_detalle_reportes_tipo_vehiculo') }}" class="btn btn-info btn-sm">Reporte Tipo Vehículo</a>
        </div>
    </div>
</div>
{% endblock %}
