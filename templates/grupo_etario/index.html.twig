{% extends 'base.html.twig' %}

{% block title %}Grupos Etarios{% endblock %}

{% block body %}
<style>
/* Grupo Etario index - green palette */
.grupo-header { display:flex; align-items:center; gap:.75rem; padding:1rem 1.25rem; border-radius:.5rem; color:#fff; margin-bottom:1.25rem; background: linear-gradient(135deg,#10b981 0%, #059669 100%); }
.grupo-header h1 { margin:0; font-size:1.35rem; font-weight:600; }
.grupo-header .bi { font-size:1.5rem; }

.grupo-card { max-width:900px; margin:0 auto; }
.grupo-table { background:#fff; border-radius:.5rem; box-shadow: 0 8px 30px rgba(36,37,38,0.06); overflow:hidden; }
.grupo-table table { margin:0; }

.add-btn { margin-top:1rem; }
</style>

<div class="container mt-4">
    <div class="grupo-header">
        <i class="bi bi-people-fill me-2"></i>
        <h1 class="mb-0">Grupos Etarios</h1>
    </div>
 
    <div class="grupo-card">
        <div class="grupo-table">
            <table class="table table-striped mb-0">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Descripci√≥n</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {% for grupo in grupos %}
                        <tr>
                            <td>{{ grupo.id }}</td>
                            <td>{{ grupo.descripcion }}</td>
                            <td>
                                <a href="{{ path('grupo_etario_edit', {'id': grupo.id}) }}" class="btn btn-warning btn-sm">Editar</a>
                                <a href="{{ path('grupo_etario_delete', {'id': grupo.id}) }}" class="btn btn-danger btn-sm">Eliminar</a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="3">No hay grupos etarios registrados.</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>

        <a href="{{ path('grupo_etario_new') }}" class="btn btn-success add-btn">
            <i class="bi bi-plus-lg me-1"></i> Registrar Grupo Etario
        </a>
    </div>
</div>
{% endblock %}
